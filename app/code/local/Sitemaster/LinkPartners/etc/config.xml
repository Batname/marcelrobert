<config>
	<modules>
		<Sitemaster_LinkPartners>
			<version>0.0.1</version>
		</Sitemaster_LinkPartners>
	</modules>
	<frontend>
		<layout>
			<updates>
				<sitemaster_linkpartners>
					<file>sitemaster_linkpartners.xml</file>
				</sitemaster_linkpartners>
			</updates>
		</layout>
	</frontend>
	<global>
		<models>
			<sitemaster_linkpartners>
				<class>Sitemaster_LinkPartners_Model</class>
			</sitemaster_linkpartners>
		</models>
		<blocks>
			<sitemaster_linkpartners>
				<class>Sitemaster_LinkPartners_Block</class>
			</sitemaster_linkpartners>
		</blocks>
		<helpers>
			<sitemaster_linkpartners>
				<class>Sitemaster_LinkPartners_Helper</class>
			</sitemaster_linkpartners>
		</helpers>
	</global>
	<default>
		<sitemaster_linkpartners>
			<general>
				<attr_id>partners</attr_id>
				<image_extension>png</image_extension>
				<show_image>1</show_image>
				<show_image_fallback_to_text>1</show_image_fallback_to_text>
				<link_search_enabled>2</link_search_enabled>
				<page_base_path></page_base_path>
				<append_category_suffix>0</append_category_suffix>
				<url_key_separator>-</url_key_separator>
				<img_url_key_separator>-</img_url_key_separator>
			</general>
			<product_view>
				<enable>1</enable>
			</product_view>
			<list>
				<all_brands>1</all_brands>
				<brands>0</brands>
				<assigned>0</assigned>
				<assigned_in_stock>0</assigned_in_stock>
			</list>
			<slider>
				<timeout></timeout>
				<speed>200</speed>
				<auto_speed>500</auto_speed>
				<pause>1</pause>
				<loop>1</loop>
				<lazy>1</lazy>
			</slider>
		</sitemaster_linkpartners>
	</default>
</config>